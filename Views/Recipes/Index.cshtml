    ViewData["Title"] = "Scraped Meals";
}

<h2>@ViewData["Title"]</h2>


@model X.PagedList.IPagedList<Recipe>
@using X.PagedList.Mvc.Core

<!-- Implement frontend part for filters and pagination -->
