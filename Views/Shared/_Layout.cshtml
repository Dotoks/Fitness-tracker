<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness_Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SliderStyleFilter.css"/>
   <!-- <link rel="stylesheet" href="~/Fitness_Tracker.styles.css" asp-append-version="true" />-->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/recipes.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FitnessTracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recipes" asp-action="Create">Create Recipe</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Body" asp-action="Create">Create Body</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Body" asp-action="Index">Macros Info</a>
                        </li>
                    </ul>
                    <partial name ="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="row">
            <div class="col">
                <img src="~/css/Images/fitness.png" alt="logo" class="logo">
                <p>
                    Fitness Tracker - the only place where you can see that being healthy is easy.  <br>
                    And you can achieve the best results by simply following the meal plan.
                </p>
            </div>
            <div class="col">
                <h3>
                    Our Location <div class="underline"><span></span></div>
                </h3>
                <p>Bulgaria blvd,</p>
                <p>Sofia, Bulgaria</p>
                <p class="email-id"></p>
                <h4>+359 896 756 342</h4>
            </div>
            <div class="col">
                <h3>
                    You can also find us <div class="underline"><span></span></div>
                </h3>
                <p>London, UK</p>
                <p>Amsterdam, Netherlands</p>
                <p>Vienna, Austria</p>
                <p>Kavala, Greece</p>
            </div>
            <div class="col">
                <h3>
                    Socials <div class="underline"><span></span></div>
                </h3>
                <div class="socials">
                    <a href=""><img src="~/css/Images/facebook-icon.png"></a>
                    <a href=""><img src="~/css/Images/instagram-icon.png"></a>
                </div>
            </div>
        </div>
        <hr>
        <p class="copyright">
            Fitness Tracker <br>
            All rights reserved.
        </p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
